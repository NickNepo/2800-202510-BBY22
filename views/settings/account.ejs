<!doctype html>
<html lang="en">
    <head>
        <%- include('../partials/header') %>
        <title>Settings - About</title>
    </head>
    <body>
        <div>
            <a href="/settings"><i class="bx bx-arrow-back"></i></a>
        </div>
        <h1>Account</h1>
        <div class="container">
            <h2>Change Username</h2>
            <form id="usernameForm">
                <input name="username" />
                <button name="usernameSubmit">Submit</button>
            </form>
            <h2>Change Password</h2>
            <form id="passwordForm">
                <label>Current Password</label>
                <input name="password"/>
                <label>New Password</label>
                <input name="passwordNew"/>
                <label>Confirm Password</label>
                <input name="passwordNewValidate"/>

                <button name="passwordSubmit">Submit</button>
            </form>
            <form id="deleteAccountForm">
                <label>Current Password</label>
                <input name="password"/>
                <button name="usernameSubmit">Delete Account?</button>
            </form>
        </div>

        <script type="module">
            import formSend from "/js/formSend.js";
            formSend("/api/account/setUsername", document.getElementById("usernameForm"), "/");
        </script>
    </body>
</html>
